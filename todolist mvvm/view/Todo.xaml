<Page
    x:Class="todolist_mvvm.view.Todo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:todolist_mvvm.view"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:todolist_mvvm.viewmodel"
    Title="Todo">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <GroupBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            VerticalAlignment="Stretch"
            Background="#DFF2BF"
            Header="Low Priority">
            <ListBox
                ItemTemplate="{StaticResource TaskTemplate}"
                ItemsSource="{Binding LowPriorityTasks}"
                MouseDoubleClick="ListBox_MouseDoubleClick"
                SelectedItem="{Binding SelectedTask, Mode=TwoWay}" />
        </GroupBox>

        <GroupBox
            Grid.Row="1"
            Grid.Column="2"
            Margin="10"
            VerticalAlignment="Stretch"
            Background="#FFD700"
            Header="Medium Priority">
            <ListBox
                ItemTemplate="{StaticResource TaskTemplate}"
                ItemsSource="{Binding MediumPriorityTasks}"
                MouseDoubleClick="ListBox_MouseDoubleClick"
                SelectedItem="{Binding SelectedTask, Mode=TwoWay}" />
        </GroupBox>

        <GroupBox
            Grid.Row="1"
            Grid.Column="3"
            Margin="10"
            VerticalAlignment="Stretch"
            Background="#FFB347"
            Header="High Priority">
            <ListBox
                ItemTemplate="{StaticResource TaskTemplate}"
                ItemsSource="{Binding HighPriorityTasks}"
                MouseDoubleClick="ListBox_MouseDoubleClick"
                SelectedItem="{Binding SelectedTask, Mode=TwoWay}" />
        </GroupBox>

        <GroupBox
            Grid.Row="1"
            Grid.Column="4"
            Margin="10"
            VerticalAlignment="Stretch"
            Background="#FF6F61"
            Header="Critical Priority">
            <ListBox
                ItemTemplate="{StaticResource TaskTemplate}"
                ItemsSource="{Binding CriticalPriorityTasks}"
                MouseDoubleClick="ListBox_MouseDoubleClick"
                SelectedItem="{Binding SelectedTask, Mode=TwoWay}" />
        </GroupBox>

        <Button
            Name="addtask"
            Grid.Column="5"
            Height="40"
            Margin="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Command="{Binding AddCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Page}}">
            <Image Source="/Resources/Assets/Images/addbutton.png" Stretch="Uniform" />

        </Button>

    </Grid>
</Page>
