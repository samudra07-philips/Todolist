<Window
    x:Class="todolist_mvvm.view.TaskDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:todolist_mvvm.view"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:todolist_mvvm.viewmodel"
    Title="TaskDetails"
    Width="600"
    Height="400"
    MinWidth="400"
    MinHeight="400"
    Icon="/Resources/Assets/Images/icon.ico"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    
    <Grid Margin="10" Background="{StaticResource bgimage2}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <TextBox
            Grid.Row="0"
            Margin="0,0,0,10"
            FontSize="16"
            IsReadOnly="{Binding IsReadOnly}"
            Text="{Binding Task.Name, UpdateSourceTrigger=PropertyChanged}" />


        <TextBox
            Grid.Row="1"
            Margin="0,0,0,10"
            AcceptsReturn="True"
            IsReadOnly="{Binding IsReadOnly}"
            Text="{Binding Task.Description, UpdateSourceTrigger=PropertyChanged}"
            VerticalScrollBarVisibility="Auto" />

        <DockPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            LastChildFill="False">
            <Button
                Margin="5,0"
                Command="{Binding EditCommand}"
                Content="Edit"
                Style="{StaticResource Rounded3DButtonStyle}" />
            <Button
                Margin="5,0"
                Command="{Binding SaveCommand}"
                Content="Save"
                Style="{StaticResource Rounded3DButtonStyle}" />
            <Button
                Margin="5,0"
                Command="{Binding DeleteCommand}"
                Content="Delete"
                Style="{StaticResource Rounded3DButtonStyle}" />
            <Button
                Margin="5,0"
                Command="{Binding MarkCompletedCommand}"
                Content="Mark Completed"
                Style="{StaticResource Rounded3DButtonStyle}" />
        </DockPanel>
    </Grid>
</Window>
