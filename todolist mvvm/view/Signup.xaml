<Page x:Class="todolist_mvvm.view.Signup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:todolist_mvvm.view"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Signup">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <TextBox Name="textboxsignup" 
         Grid.Row="1" 
         Margin="5"
         Text="Enter your name"
         GotFocus="RemoveText" 
         LostFocus="AddText"
         TextChanged="textboxsignup_TextChanged" Grid.ColumnSpan="4" Width="320" />
        
        <PasswordBox Name="passboxsignup" Width="320" Margin="5" Grid.Row="2" Grid.ColumnSpan="4" Grid.Column="0"
        PasswordChanged="passboxsignup_PasswordChanged" GotFocus="passboxsignup_GotFocus" LostFocus="passboxsignup_LostFocus" />

        <TextBlock Name="passwordPlaceholder"
        Text="           Enter your password"
        Foreground="Gray"
        Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"
        Margin="5"
        IsHitTestVisible="False"
        Visibility="Visible" />
        <PasswordBox Name="checkpassboxsignup" Width="320" Margin="5" Grid.Row="3" Grid.ColumnSpan="4" Grid.Column="0"
        PasswordChanged="checkpassboxsignup_PasswordChanged" GotFocus="checkpassboxsignup_GotFocus" 
        LostFocus="checkpassboxsignup_LostFocus" />
        
        <Button Name="SignUp" 
        Content=" Sign Up "
        Grid.Row="4" Grid.Column="1"
        Margin="20,10,30,0" 
        Click="SignUp_Click" />

    </Grid>
</Page>
