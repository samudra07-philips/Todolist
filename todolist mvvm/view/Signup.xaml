<Page
    x:Class="todolist_mvvm.view.Signup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:todolist_mvvm.view"
    xmlns:vm="clr-namespace:todolist_mvvm.viewmodel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Signup"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.DataContext>
        <vm:SignUpViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox
            Name="textboxsignup"
            Grid.Row="1"
            Grid.ColumnSpan="4"
            HorizontalContentAlignment="Center"
            Background="{StaticResource Textwatermark1}"
            Style="{StaticResource Custombox}"
            TextChanged="textboxsignup_TextChanged" 
            Text="{Binding Username,UpdateSourceTrigger=PropertyChanged}"/>

        <PasswordBox
            Name="passboxsignup"
            Grid.Row="2"
            Grid.ColumnSpan="4"
            Background="{StaticResource PasswordHint}"
            PasswordChanged="passboxsignup_PasswordChanged"
            Style="{StaticResource CustomPasswordBox}" />

        <PasswordBox
            Name="checkpassboxsignup"
            Grid.Row="3"
            Grid.ColumnSpan="4"
            Background="{StaticResource confirmpass}"
            PasswordChanged="checkpassboxsignup_PasswordChanged"
            Style="{StaticResource CustomPasswordBox}" />

        <Button
            Name="SignUp"
            Grid.Row="4"
            Grid.Column="1"
            Command="{Binding Signupcommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Page}}"
            Content=" Sign Up "
            Style="{StaticResource Rounded3DButtonStyle}" />

    </Grid>
</Page>
