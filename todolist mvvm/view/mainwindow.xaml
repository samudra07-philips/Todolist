<Window
    x:Class="todolist_mvvm.Mainwindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:todolist_mvvm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="To Do List"
    Width="600"
    Height="600"
    MinWidth="400"
    MinHeight="400"
    Icon="/Resources/Assets/Images/edit.jpg"
    mc:Ignorable="d">
    <Grid Background="{StaticResource bgimage}">
        <Button
            Name="back"
            Grid.Row="0"
            Grid.Column="0"
            Width="30"
            Height="30"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="Back_Click">
            <Image Source="/Resources/Assets/Images/back-button-interface-icon-illustration-vector.jpg" Stretch="Uniform" />
        </Button>
        <Button
            Name="Refresh"
            Grid.Row="0"
            Grid.Column="0"
            Width="30"
            Height="30"
            Margin="40,10,10,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="Refresh_Click">
            <Image Source="/Resources/Assets/Images/refresh-button-icon-17.jpg" Stretch="Uniform" />
        </Button>

        <Frame
            Name="MainFrame"
            Margin="100"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
