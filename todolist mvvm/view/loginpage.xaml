<Page
    x:Class="todolist_mvvm.view.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login Page"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox
            Name="textboxsample"
            Grid.Row="1"
            Grid.ColumnSpan="4"
            Background="{StaticResource Textwatermark}"
            Style="{StaticResource CustomTextBox}"
            TextChanged="textboxsample_TextChanged" />

        <PasswordBox
            Name="passboxsample"
            Grid.Row="2"
            Grid.ColumnSpan="4"
            Background="{StaticResource PasswordHint}"
            PasswordChanged="passboxsample_PasswordChanged"
            Style="{StaticResource CustomPasswordBox}" />

        <TextBlock
            Grid.Row="5"
            Grid.ColumnSpan="3"
            Padding="8"
            HorizontalAlignment="Center"
            FontSize="12"
            FontStretch="ExtraExpanded"
            FontWeight="Medium"><Run Text="     New User?" />
            <Hyperlink
                Click="Signedup"
                FontSize="12"
                FontStretch="ExtraExpanded"
                FontWeight="ExtraBold">
                <Run Text="Sign Up" />
            </Hyperlink>
        </TextBlock>
        <Button
            Name="Login"
            Grid.Row="3"
            Grid.ColumnSpan="3"
            Width="60"
            Height=" 30"
            Margin="30,10,20,0"
            HorizontalAlignment="Center"
            Click="Logedin"
            Content="Login"
            FontSize="12"
            FontWeight="DemiBold"
            Style="{StaticResource Rounded3DButtonStyle}" />
    </Grid>
</Page>