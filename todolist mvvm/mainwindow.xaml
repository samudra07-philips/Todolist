<Window x:Class="todolist_mvvm.Mainwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todolist_mvvm"
        mc:Ignorable="d"
        Icon="/Assets/Images/edit.jpg"
        Title="To Do List" Height="600" Width="600" MinHeight="400" MinWidth="400">
    <Grid Background="{StaticResource bgimage}">
        <Button Name="back" Click="Back_Click" Grid.Row="0" Grid.Column="0" Margin="10" Background="Transparent" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="30" Width="30">
            <Image Source="/Assets/Images/back-button-interface-icon-illustration-vector.jpg" Stretch="Uniform"/>
        </Button>
        <Button Name="Refresh" Click="Refresh_Click" Grid.Row="0" Grid.Column="0" Margin="40,10,10,10" Background="Transparent" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="30" Width="30">
            <Image Source="/Assets/Images/refresh-button-icon-17.jpg" Stretch="Uniform"/>
        </Button>

        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="100" />
    </Grid>
</Window>
