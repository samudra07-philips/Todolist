<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  ComboBox Toggle Button Template  -->
    <ControlTemplate x:Key="ComboBoxToggleButtonTemplate" TargetType="ToggleButton">
        <Border Padding="5" Background="Transparent">
            <Path
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Data="M 0 0 L 4 4 L 8 0 Z"
                Fill="Gray" />
        </Border>
    </ControlTemplate>

    <!--  ComboBox Style  -->
    <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="ToolTip" Value="Select a priority level for the task" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <!--  ComboBox Display Area  -->
                        <Border
                            Name="ComboBoxBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <DockPanel>
                                <!--  Content  -->
                                <ContentPresenter
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Content="{TemplateBinding SelectionBoxItem}" />
                                <!--  Toggle Button  -->
                                <ToggleButton
                                    DockPanel.Dock="Right"
                                    IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                    Template="{StaticResource ComboBoxToggleButtonTemplate}" />
                            </DockPanel>
                        </Border>

                        <!--  Popup Area  -->
                        <Popup
                            IsOpen="{TemplateBinding IsDropDownOpen}"
                            Placement="Bottom"
                            PlacementTarget="{Binding ElementName=ComboBoxBorder}">
                            <Border
                                Background="White"
                                BorderBrush="#D3D3D3"
                                BorderThickness="1"
                                CornerRadius="5">
                                <ScrollViewer>
                                    <ItemsPresenter />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
